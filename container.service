[Unit]
Description=Lightweight container script

[Service]
User=root
Group=root
ExecStart=/usr/local/sbin/container -internal-atboot
Type=oneshot
CapabilityBoundingSet=~
ProtectSystem=no
ProtectHome=no
PrivateDevices=no
RuntimeDirectoryPreserve=yes
TemporaryFileSystem=
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
Alias=container.service
